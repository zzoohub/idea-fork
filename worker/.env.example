# Idea Fork Worker Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="Idea Fork Worker"
DEBUG=false
LOG_LEVEL=INFO

# Redis
REDIS_URL=redis://localhost:6379/0

# RQ Queue Settings
QUEUE_NAME=idea_generation
JOB_TIMEOUT=600
RESULT_TTL=86400
FAILURE_TTL=604800

# Scheduler Settings (for daily idea generation)
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0
SCHEDULE_TIMEZONE=UTC
IDEAS_PER_DAY=3

# Database (required)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/idea_fork

# Anthropic API (required)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# LLM Settings
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.8
LLM_MAX_TOKENS=4096
