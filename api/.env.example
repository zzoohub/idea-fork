# Idea Fork API Configuration
# Copy this file to .env and adjust values for your environment

# Application
APP_NAME="Idea Fork API"
DEBUG=true
API_PREFIX=/api

# Database
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/idea_fork
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis (for RQ job queue)
REDIS_URL=redis://localhost:6379/0

# RQ Queue Settings
RQ_QUEUE_NAME=idea_generation

# CORS - Allowed origins (comma-separated list handled by pydantic)
# For development, these defaults work with Next.js on port 3000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
