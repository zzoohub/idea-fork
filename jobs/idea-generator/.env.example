# Idea Generator Configuration
# Copy this file to .env and fill in your values

# Database (required)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/idea_fork

# Anthropic API (required)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Scheduler Settings
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0
SCHEDULE_TIMEZONE=UTC

# Generation Settings
IDEAS_PER_RUN=3

# LLM Settings
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.8
LLM_MAX_TOKENS=4096

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Database Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
